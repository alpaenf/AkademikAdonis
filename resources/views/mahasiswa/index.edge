    }

    .mahasiswa-gallery {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(270px, 1fr));
      gap: 24px;
      margin-top: 20px;
    }
    .mahasiswa-card {
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 4px 15px rgba(60, 61, 55, 0.10);
      padding: 24px 18px 18px 18px;
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: all 0.3s;
