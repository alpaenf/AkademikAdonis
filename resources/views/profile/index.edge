<body>
  <nav class="sidebar">
    <button class="toggle-btn"><i class="fas fa-bars"></i></button>
    <a href="/dashboard" class="nav-link"><i class="fas fa-home"></i><span class="nav-text">Dashboard</span></a>
    <a href="/dashboard/mahasiswa" class="nav-link"><i class="fas fa-user-graduate"></i><span class="nav-text">Mahasiswa</span></a>
    <a href="/dashboard/krs" class="nav-link"><i class="fas fa-book-open"></i><span class="nav-text">KRS</span></a>
    <a href="/dashboard/matakuliah" class="nav-link"><i class="fas fa-book"></i><span class="nav-text">Mata Kuliah</span></a>
    <a href="/dashboard/prodi" class="nav-link"><i class="fas fa-graduation-cap"></i><span class="nav-text">Prodi</span></a>
    <a href="/dashboard/fakultas" class="nav-link"><i class="fas fa-building"></i><span class="nav-text">Fakultas</span></a>
    <a href="/dashboard/profile" class="nav-link active"><i class="fas fa-user"></i><span class="nav-text">Profile</span></a>
    <a href="#" class="nav-link" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">
      <i class="fas fa-sign-out-alt"></i><span class="nav-text">Logout</span>
    </a>
  </nav>
  
  <div class="main-content">
    <div class="card">
      <h3><i class="fas fa-user-circle me-2"></i>Profile Saya</h3>
      
      @if(session.has('success'))
        <div class="alert alert-success">{{ session.get('success') }}</div>
      @endif

      @if(session.has('error'))
        <div class="alert alert-danger">{{ session.get('error') }}</div>
      @endif

      <div class="text-center mb-4">
        <div class="profile-avatar">
          {{ user.fullName.charAt(0).toUpperCase() }}
        </div>
        <h4 class="text-dark">{{ user.fullName }}</h4>
        <p class="text-muted">{{ user.email }}</p>
      </div>

      <div class="profile-info">
        <h5><i class="fas fa-info-circle me-2"></i>Informasi Akun</h5>
        <p><strong>Nama Lengkap:</strong> {{ user.fullName }}</p>
        <p><strong>Email:</strong> {{ user.email }}</p>
        <p><strong>Bergabung Sejak:</strong> {{ user.createdAt.toFormat ? user.createdAt.toFormat('dd MMMM yyyy') : 'N/A' }}</p>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <h5><i class="fas fa-edit me-2"></i>Edit Profile</h5>
            <form method="POST" action="/dashboard/profile/update">
              <input type="hidden" name="_token" value="{{ csrfToken }}">
              
              <div class="mb-3">
                <label class="form-label fw-bold">Nama Lengkap</label>
                <input type="text" name="fullName" value="{{ user.fullName }}" class="form-control" required>
              </div>
              
              <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input type="email" name="email" value="{{ user.email }}" class="form-control" required>
              </div>
              
              <div class="mb-3">
                <label class="form-label fw-bold">Password Baru (kosongkan jika tidak ingin mengubah)</label>
                <input type="password" name="password" class="form-control" placeholder="Password baru">
              </div>
              
              <button type="submit" class="btn btn-warning">
                <i class="fas fa-save me-1"></i>Update Profile
              </button>
            </form>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card">
            <h5><i class="fas fa-exclamation-triangle me-2"></i>Zona Berbahaya</h5>
            <p class="text-muted mb-3">Hapus akun Anda secara permanen. Tindakan ini tidak dapat dibatalkan.</p>
            
            <button class="btn btn-danger" onclick="confirmDelete()">
              <i class="fas fa-trash me-1"></i>Hapus Akun
            </button>
            
            <form id="delete-form" method="POST" action="/dashboard/profile" style="display: none;">
              <input type="hidden" name="_token" value="{{ csrfToken }}">
              <input type="hidden" name="_method" value="DELETE">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <form id="logout-form" action="/logout" method="POST" style="display: none;">
    <input type="hidden" name="_token" value="{{ csrfToken }}">
  </form>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const sidebar = document.querySelector('.sidebar');
      const toggleBtn = document.querySelector('.toggle-btn');
      
      toggleBtn.addEventListener('click', function() {
        sidebar.classList.toggle('expanded');
      });
    });

    function confirmDelete() {
      if (confirm('Apakah Anda yakin ingin menghapus akun ini? Tindakan ini tidak dapat dibatalkan!')) {
        document.getElementById('delete-form').submit();
      }
    }
  </script>
</body>
</html> 